<div>
  <div>
    <h1>Real Time Product List</h1>
    <p id="amount"></p>
    <form action="" method="get">
      <label for="limit">Limit</label>
      <input type="number" name="limit" id="limit" value="limit">
      <button type="submit">Submit</button>
    </form>
    <br>
    <iframe name="dummyframe" id="dummyframe" style="display: none;"></iframe>
    <form action="/api/products" method="post" target="dummyframe">
      <label for="title">Title</label>
      <input type="text" name="title" id="title">
      <br>
      <label for="description">Description</label>
      <input type="text" name="description" id="description">
      <br>
      <label for="price">Price</label>
      <input type="number" step="0.01" name="price" id="price">
      <br>
      <label for="thumbnail">Thumbnail</label>
      <input type="text" name="thumbnail" id="thumbnail">
      <br>
      <label for="code">Code</label>
      <input type="text" name="code" id="code">
      <br>
      <label for="stock">Stock</label>
      <input type="number" name="stock" id="stock">
      <br>
      <label for="status">Status</label>
      true: <input type="radio" name="status" id="status" value="true" checked>
      false: <input type="radio" name="status" id="status" value="false">
      <br>
      <label for="category">Category</label>
      <input type="text" name="category" id="category">
      <br>
      <input type="submit"></input>
    </form>
    <br>
    <form onsubmit="return deleteProduct()" target="dummyframe">
      <label for="productId">ProductId to delete</label>
      <input type="number" name="productId" id="productId" required>
      <input type="submit"></input>
    </form>


    {{#unless error}}
    <table>
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Descripcion</th>
          <th>Precio</th>
          <th>Thumbnail</th>
          <th>Codigo</th>
          <th>Stock</th>
          <th>Status</th>
          <th>Categoria</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
    {{else}}
    <h2>{{error}}</h2>
    {{/unless}}
  </div>
</div>