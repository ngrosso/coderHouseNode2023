<div>
  <div>
    <h1>Product List</h1>
    <p>Amount of products showing: {{amount}}</p>
    <form action="" method="get">
      <label for="limit">Limit</label>
      <input type="number" name="limit" id="limit" value="limit">
      <button type="submit">Submit</button>
    </form>

    {{#unless error}}
    {{#if productList}}
    <table>
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Descripcion</th>
          <th>Precio</th>
          <th>Thumbnail</th>
          <th>Codigo</th>
          <th>Stock</th>
          <th>Status</th>
          <th>Categoria</th>
        </tr>
      </thead>
      <tbody>
        {{#each productList}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td>{{this.thumbnail}}</td>
          <td>{{this.code}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.status}}</td>
          <td>{{this.category}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
    <p>No products to display</p>
    {{/if}}
    {{else}}
    <h2>{{error}}</h2>
    {{/unless}}
  </div>
</div>